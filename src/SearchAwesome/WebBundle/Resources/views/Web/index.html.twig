{% extends "SearchAwesomeWebBundle::layout.html.twig" %}

{% block styles %}
    {% stylesheets output='compiled/css/app.css' filter='cssrewrite' debug=false
    'bower/ember-addons.bs_for_ember/dist/css/bs-growl-notifications.min.css'
    %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock styles %}

{% block body %}
    <script type="text/x-handlebars">
        {% raw %}
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {{#link-to 'icons' class='navbar-brand'}}SearchAwesome{{/link-to}}
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            {{#link-to 'icons'}}Icons{{/link-to}}
                        </li>
                        <li>
                            {{#link-to 'tags'}}Tags{{/link-to}}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">{{outlet}}</div>
        {% endraw %}
    </script>

    <script type="text/x-handlebars" id="icons">
        {% raw %}


        <div class="row">
            {{input type="text" class="form-control" value=searchText}}
        </div>
        <div class="row">
            {{#each searchResults itemController="icon"}}
            <div class="col-md-2 col-sm-3 col-xs-4 sa-icon">
                {{#link-to 'icon' this}}
                    <i {{bind-attr class=":fa iconClass"}}></i>
                    <p class="clearfix">
                        {{name}}
                    </p>
                {{/link-to}}
            </div>
            {{/each}}
        </div>
        {% endraw %}
    </script>

    <script type="text/x-handlebars" id="icon">
        {% raw %}
        <article class="sa-icon">
            <i {{bind-attr class=":fa iconClass"}}></i>
            <h3>{{ name }}</h3>
            <dl class="dl-horizontal">
                <dt>CSS-Class</dt>
                <dd>{{ cssClass }}</dd>
                <dt>Unicode</dt>
                <dd>{{ unicode }}</dd>
                <dt>Details</dt>
                <dd><a {{bind-attr href="href"}} target="_blank">{{ href }}</a></dd>
            </dl>

            <ul class="list-inline">
                {{#each tags}}
                <li>{{name}}</li>
                {{/each}}
            </ul>
        </article>
        {% endraw %}
    </script>

    <script type="text/x-handlebars" id="tags">
        {% raw %}
        <div class="row">
            <ul class="list-inline">
                {{#each}}
                    <li>{{ name }}</li>
                {{/each}}
            </ul>
        </div>
        {% endraw %}
    </script>

    <script type="text/x-handlebars" id="components/font-awesome-icon">
    </script>
{% endblock body %}

{% block scripts %}
    {{ parent() }}

    {% if app.request.locale != 'en' %}
    <script type="text/javascript" defer="defer" src="{{ asset('bower/moment/lang/' ~ app.request.locale ~ '.js') }}"></script>
    {% endif %}
    {% javascripts output='compiled/js/app.js' debug=false
    'bower/jquery/dist/jquery.js'
    'bower/handlebars/handlebars.js'
    'bower/ember/ember.prod.js'
    'bower/ember-data/ember-data.prod.js'
    'bower/moment/min/moment-with-langs.js'
    'bower/ember-addons.bs_for_ember/dist/js/bs-core.min.js'
    'bower/ember-addons.bs_for_ember/dist/js/bs-modal.min.js'
    'bower/ember-addons.bs_for_ember/dist/js/bs-popover.min.js'
    'bower/ember-addons.bs_for_ember/dist/js/bs-growl-notifications.min.js'
    'bower/ember-addons.bs_for_ember/dist/js/bs-badge.min.js'
    '@SearchAwesomeWebBundle/Resources/public/js/app.js'
    '@SearchAwesomeWebBundle/Resources/public/js/router.js'
    '@SearchAwesomeWebBundle/Resources/public/js/models/icon.js'
    '@SearchAwesomeWebBundle/Resources/public/js/models/site.js'
    '@SearchAwesomeWebBundle/Resources/public/js/models/tag.js'
    '@SearchAwesomeWebBundle/Resources/public/js/controllers/icon_controller.js'
    '@SearchAwesomeWebBundle/Resources/public/js/controllers/icons_controller.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript" defer="defer"></script>
    {% endjavascripts %}

{% endblock scripts %}